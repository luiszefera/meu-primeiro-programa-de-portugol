    se(dia==1)
    escreva("domingo")
    senao se(dia==2){
      escreva("segunda")}
    senao se(dia==3){
      escreva("terca")}
    senao se(dia==4){
        escreva("quarta")}
   senao se(dia==5){
        escreva("quinta")}
    senao se(dia==6){
          escreva("sexta")}
    senao se(dia==7){
            escreva("sabado")
          }
        
          

    


    }





    
  }
}
